# Production Environment Configuration
# SmartAir City - Frontend

# ============================================
# AIR QUALITY API
# ============================================
REACT_APP_AIR_API_URL=https://api.smartcity.com
REACT_APP_AIR_WS_URL=wss://api.smartcity.com

# ============================================
# CORE API - Devices & Users
# ============================================
REACT_APP_CORE_API_URL=https://api.smartcity.com

# ============================================
# GENERAL SETTINGS
# ============================================
REACT_APP_ENV=production
REACT_APP_AUTO_REFRESH_INTERVAL=60000
REACT_APP_WS_RECONNECT_INTERVAL=10000
REACT_APP_API_TIMEOUT=15000

# ============================================
# FEATURE FLAGS
# ============================================
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_AUTH=true
REACT_APP_DEBUG_MODE=false
